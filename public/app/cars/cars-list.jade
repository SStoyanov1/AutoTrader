.container
    .row
        .col-md-2 Search
        .col-md-4
            input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-2 Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="make") Make
                option(value="model") Model
                option(value="firstRegistration") First Registration
                option(value="region") Region
                option(value="price") Price
    br
    table.table
        tr
            th Make
            th Model
            th First Registration
            th Region
            th Price

        tr(ng-repeat="car in cars | filter: search | orderBy: sort")
            td
                a(href="#/cars/{{ car._id }}") {{ car.make }}
            td {{ car.model }}
            td {{ car.firstRegistration | date }}
            td {{ car.region }}
            td {{ car.price }}
